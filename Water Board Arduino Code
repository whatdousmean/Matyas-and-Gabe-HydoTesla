void setup() {
  Serial.begin(9600);
  pinMode(12, OUTPUT);
  // Sets the 12 pin to an output pin.
}

void loop() {
  int sensorValue = analogRead(A0);
  // Get a value from tbe water board
  Serial.println(sensorValue);
  // Prints the sensor value
  delay(1); 
  
  if (sensorValue < 200) {
    digitalWrite(12, HIGH);
    // If the sensor value is less than 200, it turns on the 12 pin, closing the transistor gate.
  }
  
  else {
    digitalWrite(12, LOW);
    // If the sensor value is above 200, it turns off the 12 pin, opening the transistor gate, allowing the motor to be turned on.
  }
}
